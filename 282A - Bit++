#include<iostream>
using namespace std;
int main(){
    int n;
    string v;
    cin>>n;
    int count=0;

    for(int i=0;i<n;i++){
        cin>>v;
    if(v[0]=='+' && v[1]=='+' || v[1]=='+' && v[2]=='+'){
        count++;
    }
    else if(v[0]=='-' && v[1]=='-'||v[1]=='-' && v[2]=='-' ){
        count--;
    }
    }

    cout<<count;

}
